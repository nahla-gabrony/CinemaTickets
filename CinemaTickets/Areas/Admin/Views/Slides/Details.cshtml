@model SlideEditViewModel
@section CssFile {
    <link href="~/css/admin.min.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Slide Details";
}

<section class="section create-section form-section">
    <h2 id="section-header" class="section-title position-relative text-center my-1">Details</h2>
    <div class="container">

        <form>
            <div class="card-front my-5 m-auto p-3">
                <div class="row">
                    <div class="img-details d-flex justify-content-center mb-2 overflow-hidden">
                        <img id="form-image" src="~/@Model.ExistPhoto" />
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="SlideTitle"></label>
                        <input asp-for="SlideTitle" type="text" class="input-field" readonly>
                        <i class="fa-solid fa-file-signature details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="MovieId"></label>
                        <select asp-for="MovieId" asp-items="@(new SelectList(@ViewBag.Movies, "Id", "MovieName"))" id="movie-list" disabled>
                        </select>
                        <i class="fas fa-file-signature details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="SlideDetails"></label>
                        <input asp-for="SlideDetails" type="text" class="input-field" readonly>
                        <i class="fas fa-info details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label>
                            <input asp-for="IsActive" type="checkbox" readonly> Active
                        </label>
                    </div>
                    <div class="col-12 form-group my-4 d-flex flex-column flex-sm-row justify-content-around">
                        <a asp-action="Edit" asp-route-id="@Model.SlideId" class=" btn btn-success fs-5 px-5 py-2 mb-3 mb-sm-0">Edit</a>
                        <a asp-action="Index" class="btn btn-danger fs-5 px-5 py-2">Back</a>
                    </div>

                </div>
            </div>

        </form>
    </div>
</section>
@section AdminJs {
    <script src="~/js/bundle.js"></script>
}
