@model ShowEditViewModel
@section CssFile {
    <link href="~/css/admin.min.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Show Details";
}

<section class="section create-section form-section show-form">
    <h2 id="section-header" class="section-title position-relative text-center my-1">Details</h2>
    <div class="container">

        <form>
            <div class="card-front my-5 m-auto p-3">
                <div class="row">

                    <div class="col-12 col-md-6 form-group position-relative my-4">
                        <label asp-for="ShowStartDate"></label>
                        @{var dateStart = Model.ShowStartDate.Date.ToString("dd/MM/yyyy"); }
                        <input value="@dateStart" type="text" class="input-field" readonly>
                        <i class="far fa-calendar-alt details-icon"></i>
                    </div>

                    <div class="col-12 col-md-6 form-group position-relative my-4">
                        <label asp-for="ShowEndDate"></label>
                        @{var dateEnd = Model.ShowEndDate.Date.ToString("dd/MM/yyyy"); }
                        <input value="@dateEnd" type="text" class="input-field" readonly>
                        <i class="far fa-calendar-alt details-icon"></i>
                    </div>
                    <div class="col-12 col-6 form-group position-relative mt-4">
                          <label asp-for="TimeId"></label>
                        <select asp-for="TimeId" asp-items="@(new SelectList(@ViewBag.Times, "Value", "Text"))" id="movietime-list">
                        </select>
                        <i class="far far fa-clock details-icon"></i>
                    </div>
                    <div class="col-12 col-6  form-group position-relative mt-4">
                        <label asp-for="MovieId"></label>
                        <select asp-for="MovieId" asp-items="@(new SelectList(@ViewBag.Movies, "Id", "MovieName"))" id="movie-list" disabled>
                            <option value=""></option>
                        </select>
                        <i class="fas fa-film details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="TheaterId"></label>
                        <select asp-for="TheaterId" asp-items="@(new SelectList(@ViewBag.Theaters, "Id", "TheaterName"))" id="theater-list" disabled>
                            <option value=""></option>
                        </select>
                        <i class="far fa-map-marker-alt details-icon"></i>
                    </div>
                    <div class="col-12 col-6 form-group position-relative mt-4">
                        <label asp-for="ScreenId"></label>
                        <select  asp-for="ScreenId" asp-items="@(new SelectList(@ViewBag.Screens, "Id", "ScreenName"))" id="screen-list" disabled>
                            <option value=""></option>
                        </select>
                        <i class="far fa-globe details-icon"></i>
                    </div>


                    <div class="col-12 form-group my-4 d-flex flex-column flex-sm-row justify-content-around">
                        <a asp-action="Edit" asp-route-id="@Model.ShowId" class=" btn btn-success fs-5 px-5 py-2 mb-3 mb-sm-0">Edit</a>
                        <a asp-action="Index" class="btn btn-danger fs-5 px-5 py-2">Back</a>
                    </div>

                </div>
            </div>

        </form>
    </div>
</section>

@section AdminJs {
    <script src="~/js/multiSelect.js"></script>
}