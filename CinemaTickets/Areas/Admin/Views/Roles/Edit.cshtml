@model RoleViewModel
@section CssFile {
    <link href="~/css/admin.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Edit Role";
}
<section class="section form-section admin-details-section">
    <h2 id="section-header" class="section-title position-relative text-center my-1">Edit</h2>
    <div class="container">
        @if (ViewBag.EditUserRoleSuccess == true)
        {
            <div class="toast position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-black">
                    <strong class="me-auto text-success">Update User in Role</strong>
                    <small>Just Now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body bg-light text-black">
                    <strong>Congratulations</strong> You Update the User in Role Successfully.
                </div>
            </div>
        }
        <form id="form" method="post">
            <div class="card-front my-5 m-auto p-3">
                <div class="row">
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" type="text" class="input-field" readonly>
                        <i class="far fa-id-badge details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <label asp-for="RoleName"></label>
                        <input asp-for="RoleName" type="text" class="input-field">
                        <i class="far fa-user-tag details-icon"></i>
                    </div>
                    <div class="col-12 form-group position-relative mt-4">
                        <div class="card text-white bg-card mb-3">
                            <h5 class="card-header">User In Role</h5>
                            <div class="card-body">
                                @if (Model.Users.Any())
                                {
                                    @foreach (var user in Model.Users)
                                    {
                                        <p class="card-text">@user</p>
                                    }
                                }
                                else
                                {
                                    <p class="card-text">There are no user created yet</p>
                                }
                            </div>
                            <div class="card-footer text-muted ">
                                <a asp-area="Admin" asp-controller="Roles" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-success fs-5 px-5 py-2">Edit or Remove Users</a>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="input-validation"> </div>
                    <div class="col-12 form-group my-4 d-flex flex-column flex-sm-row justify-content-around">
                        <input type="submit" value="Update" class=" btn btn-success fs-5 px-5 py-2 mb-3 mb-sm-0">
                        <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-danger fs-5 px-5 py-2">Back</a>
                    </div>

                </div>
            </div>

        </form>
    </div>
</section>


@section AdminJs {
    <script src="~/js/admin.js"></script>
}
