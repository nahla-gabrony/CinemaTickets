@model ChangePasswordViewModel
@section CssFile {
    <link href="~/css/main.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Change Password";
}

<section class="section create-section form-section">
    <div class="container">
        @if (Model.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show m-auto my-5 alert-create d-flex align-items-center" role="alert">
                <i class="far fa-info-circle fs-4 pe-2"></i>
                <div>
                    <span><strong>Congratulations</strong> You Change The Password successfully, </span>
                    <span>Click Here to</span>
                    <a asp-controller="Home" asp-action="Index" class="alert-link"><strong>Back to Home Page</strong></a>.
                </div>

                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-action="ChangePassword">
            <div class="card-front my-5 m-auto p-3">
                <h4 class="mb-4 pb-3 content-title text-center">Change Password</h4>
                <div class="row">
                    <div class="col-12 form-group position-relative mt-4">
                        <input asp-for="CurrentPassword" class="input-field" placeholder="Password" autocomplete="off">
                        <i class="far fa-unlock-alt input-icon"></i>
                        <span asp-validation-for="CurrentPassword" class="input-validation"></span>
                    </div>
                    <div class="col-12  form-group position-relative mt-4">
                        <input asp-for="NewPassword" class="input-field" placeholder="Please Enter Your New Password" autocomplete="off">
                        <i class="far fa-unlock-alt input-icon"></i>
                        <span asp-validation-for="NewPassword" class="input-validation"></span>
                    </div>
                    <div class="col-12  form-group position-relative mt-4">
                        <input asp-for="ConfirmPassword" class="input-field" placeholder="Please Confirm Your New Password" autocomplete="off">
                        <i class="far fa-unlock-alt input-icon"></i>
                        <span asp-validation-for="ConfirmPassword" class="input-validation"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="input-validation"> </div>

                    <div class="col-12 form-group my-4">
                        <input type="submit" value="Change" class="btn btn-main fs-5 mt-2 px-3 py-2">
                    </div>
                </div>
            </div>

        </form>

    </div>
</section>

